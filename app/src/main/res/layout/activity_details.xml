<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.plbear.iweight.utils.details.DetailsActivity">


    <include layout="@layout/include_title"
        android:id="@+id/details_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:id="@+id/details_linearlayout_btn"
        android:background="@null">

        <Button
            android:id="@+id/btn_details_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog"
            android:text="@string/details_delete"
            android:textColor="@color/details_item_bg"
            android:visibility="gone"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_details_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/details_item_bg"
            android:background="@drawable/btn_dialog"
            android:text="@string/details_change"
            android:visibility="gone"
            android:textSize="15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_details"
        android:layout_below="@id/details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/details_linearlayout_btn"></ListView>
</RelativeLayout>
