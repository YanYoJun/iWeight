<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.plbear.iweight.model.settings.SettingsActivity">

    <include layout="@layout/include_title"></include>

    <fragment
        android:name="com.plbear.iweight.model.settings.SettingsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_title"></fragment>

    <FrameLayout
        android:id="@+id/settings_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></FrameLayout>

</RelativeLayout>
