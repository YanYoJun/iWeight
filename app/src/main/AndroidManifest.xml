<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plbear.iweight"
    android:versionCode="3"
    android:versionName="3.0">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.plbear.iweight.model.main.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.plbear.iweight.model.settings.SettingsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".utils.details.DetailsActivity"></activity>
        <activity android:name=".model.other.AboutActivity">

        </activity>

        <provider
            android:name="com.plbear.iweight.storage.DBProvider"
            android:authorities="com.plbear.iweight.provider"
            android:exported="false"
            android:multiprocess="false"></provider>

    </application>

</manifest>